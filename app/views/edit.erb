<h1> Edit Recipe <h1>

<form method="POST" action="/recipes/<%= @recipe.id %>">  
<input type="hidden" name="_method" value="patch">
<input type="text" name="name" placeholder="Enter name here" value="<%= @recipe.name %>">
<input type="text" name="ingredients" placeholder="Enter ingredients here" value="<%= @recipe.ingredients %>">
<input type="text" name="cook_time" placeholder="Enter cook time here" value="<%= @recipe.cook_time %>">
<input type="submit" value="submit">
</form>
